<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 转盘部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center">

        <!-- 预设名称 -->
        <TextView
            android:id="@+id/text_current_presuppose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turntable_current_presuppose"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_rounded_card"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <com.luza.zippy.ui.views.TurntableView
            android:id="@+id/turntable_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/turntable_start"
            android:textColor="@color/black"
            app:cornerRadius="24dp"
            android:paddingHorizontal="32dp"
            app:strokeColor="@color/blue_500"
            app:strokeWidth="1dp"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>

    <!-- 底部按钮卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_presuppose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/turntable_select_presuppose"
                android:textColor="@color/black"
                app:cornerRadius="24dp"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/blue_500"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_presuppose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/turntable_edit_presuppose"
                android:textColor="@color/black"
                app:cornerRadius="24dp"
                app:strokeColor="@color/blue_500"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>