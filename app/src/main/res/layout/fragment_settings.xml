<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 添加 ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 语言设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- 原有的语言设置内容 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 语言设置标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"/>

                    <!-- 语言切换开关 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_language"
                            app:tint="?attr/textColor" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="@string/english"
                            android:textSize="16sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginStart="16dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                    </LinearLayout>

                    <!-- 当前语言说明 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_description"
                        android:textSize="14sp"
                        android:textColor="#99000000"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 主题设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- 原有的主题设置内容 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 主题设置标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/theme_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:padding="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 滑动条设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- 原有的滑动条设置内容 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 滑动条标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homeAnimationNum_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"/>

                    <!-- 显示当前值的文本 -->
                    <TextView
                        android:id="@+id/slider_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/textColor"
                        android:layout_marginBottom="8dp"/>

                    <!-- 滑动条 -->
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:min="10"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- 说明文本 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homeAnimationNum_description"
                        android:textSize="14sp"
                        android:textColor="#99000000"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 激活信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 激活信息标题 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activation_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_500"
                        android:layout_marginBottom="16dp"/>

                    <!-- 激活码输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/activation_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/blue_500"
                        app:hintTextColor="@color/blue_500"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/activation_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/activation_hint"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_500"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 确认按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/activation_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activation_button"
                        android:textColor="@color/black"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/blue_500"
                        app:strokeWidth="1dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- 说明文本 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activation_description"
                        android:textSize="14sp"
                        android:textColor="#99000000"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout> 