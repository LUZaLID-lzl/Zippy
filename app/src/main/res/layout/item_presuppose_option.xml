<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- 选项名称 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:boxStrokeColor="@color/blue_500"
        app:hintTextColor="@color/blue_500"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/turntable_presuppose_option_name"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 删除按钮 -->
    <ImageButton
        android:id="@+id/btn_delete_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        app:tint="@color/red_500"/>

</LinearLayout> 