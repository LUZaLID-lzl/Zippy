<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 使用ScrollView确保在小屏幕上可以滚动 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- WiFi信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/blue_500"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/wifi_info_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_500"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_wifi_ssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_bssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_signal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>

                    <TextView
                        android:id="@+id/text_wifi_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:textColor="?attr/textColor"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- WiFi测试卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_speed_test"
                            app:tint="@color/blue_500"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/wifi_test_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_500"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_wifi_ping"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/wifi_ping_test"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            app:cornerRadius="12dp"
                            app:elevation="0dp"
                            app:backgroundTint="@color/blue_500"
                            app:rippleColor="@color/blue_700"
                            style="@style/Widget.MaterialComponents.Button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_wifi_speed"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="速率测试"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            app:cornerRadius="12dp"
                            app:elevation="0dp"
                            app:backgroundTint="@color/blue_500"
                            app:rippleColor="@color/blue_700"
                            style="@style/Widget.MaterialComponents.Button"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_wifi_ping_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/blue_500"/>

                    <TextView
                        android:id="@+id/text_wifi_speed_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/blue_500"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>