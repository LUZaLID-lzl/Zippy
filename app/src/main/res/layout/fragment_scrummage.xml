<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 顶部按钮容器 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 上方两个按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 过滤按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_scrummage_center"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/scrummage_filter"
                    android:textSize="14sp"
                    android:textColor="@color/blue_500"
                    android:letterSpacing="0"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_filter"
                    app:iconTint="@color/blue_500"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"
                    app:strokeColor="@color/blue_500"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/blue_100"
                    app:backgroundTint="@color/white"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <!-- 设置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_scrummage_right"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:textSize="14sp"
                    android:textColor="@color/blue_500"
                    android:letterSpacing="0"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_settings"
                    app:iconTint="@color/blue_500"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/blue_500"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/blue_100"
                    app:backgroundTint="@color/white"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>

            <!-- 下方添加记录按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_scrummage_left"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/scrummage_add"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:letterSpacing="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:rippleColor="@color/blue_700"
                app:backgroundTint="@color/blue_500"
                style="@style/Widget.MaterialComponents.Button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 过滤状态卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_filter_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_filter_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"/>

    </androidx.cardview.widget.CardView>

    <!-- 主要内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_scrummage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />

        <TextView
            android:id="@+id/text_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/scrummage_empty"
            android:textColor="@android:color/black"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>