<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sidebarList.compass.CompassFragment">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 指南针主容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="32dp"
        android:gravity="center">

        <!-- 外圈装饰 -->
        <View
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:background="@drawable/compass_outer_ring"
            android:layout_gravity="center" />

        <!-- 指南针背景圆环 -->
        <View
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/compass_background"
            android:layout_gravity="center" />

        <!-- 指南针盘 -->
        <com.luza.zippy.ui.views.CompassScaleView
            android:id="@+id/compass_rose"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:contentDescription="@string/compass_rose" />

        <!-- 方向指示器 -->
        <ImageView
            android:id="@+id/direction_indicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/compass_arrow"
            android:contentDescription="@string/direction_indicator" />

        <!-- 中心装饰点 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/compass_center_dot" />

    </FrameLayout>

    <!-- 信息卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 方向信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tv_degrees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textSize="36sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8E8E8"
                android:layout_marginBottom="20dp" />

            <!-- 详细信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/compass_info_background">

                <!-- 精度和海拔 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_accuracy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="精度: 高"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:fontFamily="sans-serif"
                        android:drawableStart="@drawable/ic_accuracy"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_altitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="海拔: 0m"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:fontFamily="sans-serif"
                        android:drawableStart="@drawable/ic_altitude"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <!-- 经纬度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_latitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="纬度: 0.000000°"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:fontFamily="sans-serif"
                        android:drawableStart="@drawable/ic_latitude"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_longitude"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="经度: 0.000000°"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:fontFamily="sans-serif"
                        android:drawableStart="@drawable/ic_longitude"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>