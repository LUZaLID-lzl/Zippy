<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sidebarList.minecraft.location.MinecraftLocationFragment">

    <!-- 引入标题栏布局 -->
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_page_title"/>

    <!-- 顶部卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 第一行：维度名称、坐标和按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 左侧信息区域 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDimensionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        tools:text="地狱"/>

                    <TextView
                        android:id="@+id/tvCenterCoordinates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        tools:text="中心坐标：(0, 0)"/>
                </LinearLayout>

                <!-- 右侧按钮区域 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:tint="@android:color/black"/>

                    <ImageButton
                        android:id="@+id/btnSettings"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_settings"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:tint="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 第二行：维度切换按钮组 -->
            <RadioGroup
                android:id="@+id/rgDimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rbOverworld"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="主世界"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:paddingEnd="20dp"
                    android:scaleX="1.0"
                    android:scaleY="1.0"/>

                <RadioButton
                    android:id="@+id/rbNether"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="地狱"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:paddingEnd="20dp"
                    android:scaleX="1.0"
                    android:scaleY="1.0"/>

                <RadioButton
                    android:id="@+id/rbEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="末地"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:scaleX="1.0"
                    android:scaleY="1.0"/>
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 坐标视图 -->
    <com.luza.zippy.ui.views.CoordinateView
        android:id="@+id/coordinateView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>